# IC Autopilot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PostgreSQL Database
# =============================================================================
PGHOST=localhost
PGPORT=5432
PGDATABASE=icautopilot
PGUSER=postgres
PGPASSWORD=your_password_here
PG_SCHEMA=ic_autopilot

# =============================================================================
# Redis (Event Bus)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Azure OpenAI
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# =============================================================================
# Azure AI Search
# =============================================================================
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your_api_key_here
AZURE_SEARCH_INDEX=fund-documents

# =============================================================================
# Azure Blob Storage (Artifacts)
# =============================================================================
# Option 1: Connection string
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Option 2: Account name (uses managed identity)
AZURE_STORAGE_ACCOUNT_NAME=icautopilotstore
ARTIFACT_CONTAINER_NAME=ic-artifacts

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
PORT=5001
LOG_LEVEL=INFO

# =============================================================================
# Frontend (Next.js)
# =============================================================================
BACKEND_URL=http://localhost:5001

# =============================================================================
# Azure Workload Identity (for AKS deployment)
# =============================================================================
# AZURE_CLIENT_ID=your_managed_identity_client_id
# AZURE_TENANT_ID=your_tenant_id
